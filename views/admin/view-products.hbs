<section>
    <div class="container">
        <table class="table">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
               <a href="/admin/add-product">
               <button type="button" class="btn btn-success">Add product</button>
              </a> 
                 
          </div>
  <div class="row mt-5">      
  <thead class="d-mt-5">
    <tr>
      <th scope="col">NO</th>
      <th scope="col">TITLE</th>
      <th scope="col">CATEGORY</th>
      <th scope="col">DESCRIPTION</th>
      <th scope="col">IMAGE</th>
      
    </tr>
  </thead>
  </div>  
  <tbody>
    
     {{#each product}}
     <tr>
     <th>1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" style="height: 50px;"></td>
      <td>
           <a href="/admin/edit-product/{{this._id}}" class="btn btn-success">Edit</a>
           <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.name}}?')">Delete</a>
      </td>
      </tr>
    {{/each}} 
      
   
  </tbody>
</table>
    </div>
</section>